@page
@model ListModel
@{
}
<h1> Restraurants..</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="searchTerm" />
            <span class="input-group-btn">
                <button class="btn btn-default">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>

<table class="table">
    @foreach (var item in Model.foodItems)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.FoodType</td>
            <td>@item.SpiceLevel</td>
            <td>
                <a class="btn btn-lg"
                   asp-page="./Detail"
                   asp-route-restaurantId="@item.Id">
                    <i class="glyphicon glyphicon-zoom-in">
                    </i>
                </a>
            </td>
            <td>
                <a class="btn btn-lg"
                   asp-page="./Edit"
                   asp-route-restaurantId="@item.Id">
                    <i class="glyphicon glyphicon-edit">
                    </i>
                </a>
            </td>

        </tr>
    }
    
</table>
<a asp-page="./Edit"  class="btn btn-primary"> Add New</a>
<div>@Model.Message </div>